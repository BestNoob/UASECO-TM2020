<?xml version="1.0" encoding="utf-8"?>
<modescript_settings>
	<!-- Documentation: http://doc.maniaplanet.com/creation/maniascript/libraries/library-ui.html -->
	<ui_properties>
		<!-- The map name and author displayed in the top right of the screen when viewing the scores table -->
		<map_info>
			<visible>true</visible>
		</map_info>

		<!-- ... -->
		<opponents_info>
			<visible>true</visible>
		</opponents_info>

		<!--
		The server chat displayed on the bottom right of the screen,
		the offset values range from 0.0 to -3.2 for x and from 0.0 to 1.8 for y,
		the linecount property must be between 0 and 40
		//-->
		<chat>
			<visible>true</visible>
			<offset>
				<x>-0.015</x>
				<y>0.0</y>
			</offset>
			<linecount>7</linecount>
		</chat>

		<!-- Time of the players at the current checkpoint displayed at the bottom of the screen -->
		<checkpoint_list>
			<visible>true</visible>
			<position>
				<x>40.0</x>
				<y>-90.0</y>
				<z>5.0</z>
			</position>
		</checkpoint_list>

		<!-- Small scores table displayed at the end of race of the round based modes (Rounds, Cup, ...) on the right of the screen -->
		<round_scores>
			<visible>true</visible>
			<position>
				<x>104.0</x>
				<y>14.0</y>
				<z>5.0</z>
			</position>
		</round_scores>

		<!-- Race time left displayed at the bottom right of the screen -->
		<countdown>
			<visible>true</visible>
			<position>
				<x>154.0</x>
				<y>-57.0</y>
				<z>5.0</z>
			</position>
		</countdown>

		<!-- 3, 2, 1, Go! message displayed on the middle of the screen when spawning -->
		<go>
			<visible>true</visible>
		</go>

		<!-- Current race chrono displayed at the bottom center of the screen -->
		<chrono>
			<visible>true</visible>
			<position>
				<x>0.0</x>
				<y>-80.0</y>
				<z>5.0</z>
			</position>
		</chrono>

		<!-- Speed and distance raced displayed in the bottom right of the screen -->
		<speed_and_distance>
			<visible>true</visible>
			<position>
				<x>158.0</x>
				<y>-79.5</y>
				<z>5.0</z>
			</position>
		</speed_and_distance>

		<!-- Previous and best times displayed at the bottom right of the screen -->
		<personal_best_and_rank>
			<visible>true</visible>
			<position>
				<x>158.0</x>
				<y>-67.0</y>
				<z>5.0</z>
			</position>
		</personal_best_and_rank>

		<!-- Current position in the map ranking displayed at the bottom right of the screen -->
		<position>
			<visible>true</visible>
		</position>

		<!-- Checkpoint time information displayed in the middle of the screen when crossing a checkpoint -->
		<checkpoint_time>
			<visible>true</visible>
			<position>
				<x>-8.0</x>
				<y>31.8</y>
				<z>-10.0</z>
			</position>
		</checkpoint_time>

		<!-- The avatar of the last player speaking in the chat displayed above the chat -->
		<chat_avatar>
			<visible>true</visible>
		</chat_avatar>

		<!-- Warm-up progression displayed on the right of the screen during warm-up -->
		<warmup>
			<visible>true</visible>
			<position>
				<x>170.0</x>
				<y>27.0</y>
				<z>0.0</z>
			</position>
		</warmup>
	</ui_properties>



	<modebase>
		<!-- Chat time in seconds at the end of the map -->
		<chat_time>15</chat_time>

		<!-- Allow the players to respawn ('true') or not ('false') -->
		<allow_respawn>true</allow_respawn>

		<!-- Duration of the warm up phase in rounds (e.g. '2' for two warm up rounds), set to '-1' to disable warm up -->
		<warm_up_duration>-1</warm_up_duration>

		<!--
		Path/URL to a scores table style from an XML file,
		see for details: http://doc.maniaplanet.com/dedicated-server/customize-scores-table.html
		//-->
		<scores_table_style_path></scores_table_style_path>
	</modebase>



	<modesetup>
		<!-- Settings for TimeAttack.Script.txt -->
		<timeattack>
			<!-- Time limit in seconds, until the next Map is loaded -->
			<time_limit>300</time_limit>
		</timeattack>



		<!-- Settings for Rounds.Script.txt -->
		<rounds>
			<!-- Points limit to finish the Map, set to '-1' to disable -->
			<points_limit>99</points_limit>

			<!-- Finish timeout in seconds for other Players to finish the Map too, set to '-1' for automatic (based on author time) -->
			<finish_timeout>10</finish_timeout>

			<!--
			Set to 'true' to use alternate rules, otherwise 'false',
			see 'rounds_usenewrules' for details: http://wiki.maniaplanet.com/en/Dedicated_servers#The_configuration_of_the_rounds_mode
			//-->
			<use_alternate_rules>false</use_alternate_rules>

			<!-- Force number of laps, '-1' to disable -->
			<force_number_laps>-1</force_number_laps>

			<!-- Set to 'true' to display time difference at each checkpoint, otherwise 'false' -->
			<display_time_diff>false</display_time_diff>

			<!-- Set to 'true' to continue to play the Map until the tie is broken, otherwise 'false' -->
			<use_tie_break>true</use_tie_break>
		</rounds>




		<!-- Settings for Team.Script.txt -->
		<team>
			<!-- Points limit to finish the Map, set to '-1' to disable -->
			<points_limit>99</points_limit>

			<!-- Finish timeout in seconds for other Players to finish the Map too, set to '-1' for automatic (based on author time) -->
			<finish_timeout>10</finish_timeout>

			<!--
			Set to 'true' to use alternate rules, otherwise 'false',
			see 'team_usenewrules' for details: http://wiki.maniaplanet.com/en/Dedicated_servers#The_configuration_of_the_team_mode
			//-->
			<use_alternate_rules>false</use_alternate_rules>

			<!-- Force number of laps, '-1' to disable -->
			<force_number_laps>-1</force_number_laps>

			<!-- Set to 'true' to display time difference at each checkpoint, otherwise 'false' -->
			<display_time_diff>false</display_time_diff>

			<!-- The maxium number of points attributed to the first Player to cross the finish line -->
			<max_points_per_round>6</max_points_per_round>

			<!-- The number of points lead a team must have to win the Map -->
			<points_gap>1</points_gap>

			<!-- Set to 'true' to use the Players clublinks, or otherwise use the default teams, otherwise 'false' -->
			<use_player_clublinks>false</use_player_clublinks>
		</team>




		<!-- Settings for Laps.Script.txt -->
		<laps>
			<!-- Time limit in seconds, until the next Map is loaded -->
			<time_limit>300</time_limit>

			<!-- Finish timeout in seconds for other Players to finish the Map too, set to '-1' to disable -->
			<finish_timeout>10</finish_timeout>

			<!-- Force number of laps, '-1' to disable -->
			<force_number_laps>5</force_number_laps>
		</laps>



		<!-- Settings for Cup.Script.txt -->
		<cup>
			<!-- Points limit to finish the Map, set to '-1' to disable -->
			<points_limit>99</points_limit>

			<!-- Finish timeout in seconds for other Players to finish the Map too, set to '-1' for automatic (based on author time) -->
			<finish_timeout>10</finish_timeout>

			<!-- Does not have any effect in this mode, let the default 'false' -->
			<use_alternate_rules>false</use_alternate_rules>

			<!-- Force number of laps, '-1' to disable -->
			<force_number_laps>-1</force_number_laps>

			<!-- Set to 'true' to display time difference at each checkpoint, otherwise 'false' -->
			<display_time_diff>false</display_time_diff>

			<!-- Defines the number of rounds to do by the Players before changing map -->
			<rounds_per_map>5</rounds_per_map>

			<!-- Defines the number of winners determined by victory with the finalist's status -->
			<number_of_winners>3</number_of_winners>

			<!-- Duration of the warm up phase in rounds (e.g. '2' for two warm up rounds), set to '-1' to disable warm up -->
			<warm_up_duration>2</warm_up_duration>
		</cup>



		<!-- Settings for TeamAttack.Script.txt -->
		<teamattack>
			<!-- Time limit in seconds, until the next Map is loaded -->
			<time_limit>300</time_limit>

			<!-- Minimum number of Players per clan -->
			<min_player_per_clan>3</min_player_per_clan>

			<!-- Maximum number of Players per clan -->
			<max_player_per_clan>3</max_player_per_clan>

			<!-- Maximum number of clans, set to '-1' to disable -->
			<max_clan_number>-1</max_clan_number>
		</teamattack>
	</modesetup>
</modescript_settings>
