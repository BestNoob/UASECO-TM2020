<?xml version="1.0" encoding="utf-8"?>
<settings>
	<position>
		<x>136.0</x>
		<y>-77.0</y>
		<z>-60.0</z>
	</position>


	<!-- Change the scale factor, 1.0 = 100% -->
	<scale>0.5</scale>


	<!-- Change here the speed unit to whatever you want, default = 'KPH' (kilometer per hour) -->
	<velocity_unit>KPH</velocity_unit>


	<!--
	With this you can change the colors of the tachometer scale

	Nice modulate colors (RRGGBB)
	~~~~~~~~~~~~~~~~~~~~
	ACC720 = Green
	5E8ADB = Blue
	FFF700 = Yellow
	F7AC1E = Orange
	E74F3C = Red
	F74BD3 = Pink (for the Girls)
	//-->
	<modulation>
		<complete>E74F3C</complete>
		<needle>FBBE08</needle>
		<tiles>
			<tile01>FFF700</tile01>
			<tile02>FFF700</tile02>
			<tile03>FFF700</tile03>
