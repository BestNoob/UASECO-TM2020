<?xml version="1.0" encoding="utf-8" standalone="yes" ?>
<settings>
	<!--
	Player idle this number of maps and get kicked or specced
	//-->
	<kick_player_after>2</kick_player_after>

	<!--
	Spectator idle this number of maps and get kicked
	//-->
	<kick_spectator_after>4</kick_spectator_after>

	<!--
	Kick spectators too
	//-->
	<kick_spectators>true</kick_spectators>

	<!--
	Set idle player to spectator first instead of kick
	//-->
	<force_spectator_first>true</force_spectator_first>

	<!-- Reset idle counter... -->
	<reset>
		<!-- ...on chat use -->
		<chat>true</chat>

		<!-- ...when passing a checkpoint -->
		<checkpoint>true</checkpoint>

		<!-- ...when reaching the finish -->
		<!-- Do not use this in rounds or team mode, because every player will "finish"! -->
		<finish>false</finish>
	</reset>

	<messages>
		<idlekick_play>{#server}» IdleKick player {#highlite}{1}$z$s{#server} after {#highlite}{2}{#server} map{3}!</idlekick_play>
		<idlespec_play>{#server}» IdleSpec player {#highlite}{1}$z$s{#server} after {#highlite}{2}{#server} map{3}</idlespec_play>
		<idlekick_spec>{#server}» IdleKick spectator {#highlite}{1}$z$s{#server} after {#highlite}{2}{#server} map{3}!</idlekick_spec>
	</messages>
</settings>
