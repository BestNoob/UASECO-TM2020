<?xml version="1.0" encoding="utf-8" standalone="yes" ?>
<settings>
	<!-- Do you want UASECO to display newly driven records? -->
	<display>true</display>

	<!--
	true = in message window, false = in chat
	//-->
	<recs_in_window>false</recs_in_window>

	<show_min_recs>0</show_min_recs>

	<!--
	2 = full report, 1 = only map record, 0 = none
	add 4 to show the report in the message window
	instead of the main chat window
	//-->
	<show_recs_before>0</show_recs_before>

	<!--
	2 = full report, 1 = only top-5, 0 = none
	add 4 to show the report in the message window
	instead of the main chat window
	//-->
	<show_recs_after>0</show_recs_after>

	<show_recs_range>true</show_recs_range>

	<!--
	Sets the maximum number of records stored per map: Lower = Faster
	//-->
	<max_records>500</max_records>

	<!--
	Limit the highest record that will be displayed to all.
	If lower than <max_records>, records above this limit will
	only be displayed to the pertaining player.
	//-->
	<limit>1000</limit>
</settings>
