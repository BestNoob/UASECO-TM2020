<records_eyepiece>
	<!-- THIS IS THE CONFIG FILE FOR THE TM2-PORT ONLY -->

	<!-- Here you can setup some special features -->
	<features>
		<!-- Amount of seconds the record widgets wait until they refresh if required (increase if you experience problems on populated servers) -->
		<refresh_interval>10</refresh_interval>

		<!-- If you want to mark at the Record-Widgets the current online Players records set to 'true', otherwise set 'false' -->
		<mark_online_player_records>true</mark_online_player_records>

		<!-- This allows you to illuminate all too dark colored names from $000 till $555 to $AAA; set to 'true' to enabled, otherwise set 'false' -->
		<illuminate_names>false</illuminate_names>

		<!-- Setup the formatting of numbers (e.g. Amount of Planets, Won...), pick on of the following:
			'english'	= 1,234.56
			'german'	= 1.234,56
			'french'	= 1 234,56
		-->
		<number_format>english</number_format>

		<!-- If you want to shorten high numbers like 21,425 to 21k then set to 'true', otherwise set 'false' -->
		<shorten_numbers>false</shorten_numbers>

		<karma>
			<!-- With this you adjust the min. amount of Votes for a Map to come into the TopMaps list, Maps below this limit are skipped from TopMaps list. -->
			<min_votes>30</min_votes>

			<!-- Here you can select the method how the Karma is calculated:
				'tmkarma'	= calculate like TM-Karma.com it does (default)
				'rasp'		= calculate like XAseco with RASP/Karma
			//-->
			<calculation_method>tmkarma</calculation_method>
		</karma>

		<songlist>
			<!-- If you want to sort the Songlist, then set to 'true', otherwise (for the unsorted Songlist) 'false' -->
			<sorting>true</sorting>

			<!-- If set to 'true', then display the MusiclistWindow after unjuke one Song or clear the entire jukebox. To disable set to 'false' -->
			<force_songlist>true</force_songlist>
		</songlist>

		<maplist>
			<!-- Sorting the Maplist:
				'author'	= Order by Authorname (default)
				'map'		= Order by Mapname
				'false'		= unsorted Maplist
			//-->
			<sorting>author</sorting>

			<!-- If set to 'true', then display the MaplistWindow after unjuke one Map or clear the entire jukebox. To disable set to 'false' -->
			<force_maplist>true</force_maplist>

			<!-- This feature is for Maps that are not at mania-exchange.com, but you want to see the map image in the Last/Current/Next-Window -->
			<mapimages>
				<!-- If set to 'true', then the Images from the Mapfile are extracted and stored. To disable set to 'false' -->
				<enabled>true</enabled>

				<!--
				Path where the Images are stored

				Some examples for <storing_path>:
				 - Linux (local):		<storing_path>/home/user/htdocs/mapimages/</storing_path>
				 - Windows (local):		<storing_path>C:/server/htdocs/mapimages/</storing_path>
				//-->
				<storing_path>/home/midi/public_html/mapimages/</storing_path>

				<!-- URL from <storing_path> to access over HTTP the Images, e.g. 'http://www.example.com/mapimages/' -->
				<access_url>http://192.168.0.102/mapimages/</access_url>
			</mapimages>
		</maplist>

		<!--
			Setup the limit of displayed amounts (and memory consumption) of all 'MORE RANKING'* lists,
			set to '-1' for no limit, or to a wanted amount (e.g. 5000 entries = default)
			*) Not used for Dedimania-Records, Local-Records, Live-Rankings and Top-Maps!
		//-->
		<toplist_limit>-1</toplist_limit>
	</features>


